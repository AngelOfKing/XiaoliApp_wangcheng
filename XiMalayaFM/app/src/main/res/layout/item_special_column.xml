<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <TextView
                android:id="@+id/item_special_column_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_action_search"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_centerVertical="true"
                android:text="精品听单"
                />
        <TextView
                android:id="@+id/item_special_column_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="更多 > "
                />
    </RelativeLayout>

    <LinearLayout
            android:id="@+id/item_special_block0"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
        <ImageView
                android:id="@+id/item_special_column_image0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_1"
                />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
            <TextView
                    android:id="@+id/item_special_column_textView_title0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="传奇人生"
                    android:textStyle="bold"
                    />
            <TextView
                    android:id="@+id/item_special_column_textView_subtitle0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="清朝之后，中国之前，民国是段混乱又丰富多彩的一段时期"
                    />
            <TextView
                    android:id="@+id/item_special_column_textView_footnote0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="6首声音"
                    />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/item_special_block1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
        <ImageView
                android:id="@+id/item_special_column_image1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher"
                />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
            <TextView
                    android:id="@+id/item_special_column_textView_title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="传奇人生"
                    android:textStyle="bold"
                    />
            <TextView
                    android:id="@+id/item_special_column_textView_subtitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="清朝之后，中国之前，民国是段混乱又丰富多彩的一段时期"
                    />
            <TextView
                    android:id="@+id/item_special_column_textView_footnote1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="6首声音"
                    />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>