<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.google.xiaoliapp.app.Guide_GradeActivity">

        <RadioGroup
                android:id="@+id/grade_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                android:background="#fff"
                >
            <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:text="印象(9)"
                    android:gravity="center"
                    android:textColor="@color/test_selector"
                    android:background="#00000000"
                    />
            <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@color/test_selector"
                    android:background="#00000000"
                    android:text="打分(8.6)"
                    />
        </RadioGroup>

    <Button
            android:id="@+id/grade_look"
            android:layout_below="@id/grade_radio_group"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="邀请TA来看看"
            android:textColor="#fff"
            android:background="@drawable/button_shape"
            />

    <ListView
            android:layout_below="@id/grade_look"
            android:id="@+id/grade_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ></ListView>

    <Button
            android:id="@+id/grade_score"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="我来给TA打分"
            android:textColor="#fff"
            android:background="@drawable/button_shape"
            android:layout_marginBottom="150dp"
            android:layout_alignParentBottom="true"
            />
</RelativeLayout>
