<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.google.xiaoliapp.app.BaseActivity">

   <RelativeLayout
           android:id="@+id/common_head"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginRight="5dp"
           android:layout_marginLeft="5dp"
           android:background="@color/BaseRed"
           >
    <Button
            android:id="@+id/common_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@drawable/back"
            />
       <TextView
               android:id="@+id/common_head_text"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
              android:layout_centerInParent="true"
               android:text="账号注册"
               android:textColor="#fff"
               />
       <Button
               android:id="@+id/common_undo"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="取消"
               android:textColor="#FFF"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:background="#0000"
               android:visibility="invisible"
               />
   </RelativeLayout>

    <RelativeLayout
            android:layout_below="@id/common_head"
           android:id="@+id/common_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@android:style/Animation.Translucent"
            ></RelativeLayout>

    <RadioGroup
            android:id="@+id/common_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFF"
            android:padding="2dp"
            android:layout_alignParentBottom="true"
            >
        <RadioButton
                android:id="@+id/common_tab_relationManage"
                style="@style/Myself_RadioButton"
                android:drawableTop="@drawable/radio_button_selector01"
                android:text="关系管理"
                />
        <RadioButton
                android:id="@+id/common_tab_gift_strategy"
                style="@style/Myself_RadioButton"
                android:drawableTop="@drawable/radio_button_selector2"
                android:text="情礼攻略"
                />
        <RadioButton
                android:id="@+id/common_tab_discovery"
                style="@style/Myself_RadioButton"
                android:drawableTop="@drawable/radio_button3"
                android:text="发现"
                />
        <RadioButton
                android:id="@+id/common_tab_myself"
                style="@style/Myself_RadioButton"
                android:drawableTop="@drawable/radio_button4"
                android:text="我"
                />
    </RadioGroup>

</RelativeLayout>
