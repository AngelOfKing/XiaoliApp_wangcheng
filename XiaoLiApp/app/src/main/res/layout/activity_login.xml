<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.google.xiaoliapp.app.LoginActivity">


        <TextView
                android:id="@+id/txt_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号"
                />
        <EditText
                android:id="@+id/edit_number"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/u3"
                android:layout_toRightOf="@id/txt_number"
                android:layout_marginLeft="20dp"
                android:hint="请输入所注册的手机号"
                android:layout_alignBaseline="@id/txt_number"
                />

        <TextView
                android:id="@+id/txt_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_number"
                android:layout_marginTop="30dp"
                android:text="密码"
                />

        <EditText
                android:id="@+id/edit_password"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/edit_number"
                android:layout_marginTop="20dp"
                android:background="@drawable/u3"
                android:layout_toRightOf="@id/txt_password"
                android:layout_below="@id/edit_number"
                android:layout_alignBaseline="@id/txt_password"
                android:hint="请输入6-12位密码"
                android:inputType="numberPassword"
                />

        <Button
                android:id="@+id/forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码?"
                android:textColor="#f00"
                android:onClick="onClick"
               android:outlineProvider="paddedBounds"
                android:layout_below="@id/edit_password"
                android:layout_alignLeft="@id/edit_password"
                />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/forget_password"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                >

            <Button
                    android:id="@+id/btn_login"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#f00"
                    android:layout_weight="1"
                    android:text="登陆"
                    android:textColor="#fff"
                    android:layout_below="@id/forget_password"
                    />
            <Button
                    android:id="@+id/btn_register"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="30sp"
                    android:background="#f00"
                    android:text="注册"
                    android:textColor="#fff"
                    android:onClick="onClick"
                    android:layout_alignBaseline="@id/btn_login"
                    />

            </LinearLayout>
        <Button
                android:id="@+id/btn_looking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="随意看看"
                android:background="@drawable/look"
                 android:layout_centerInParent="true"
                android:layout_marginTop="15dp"
                android:textColor="#f00"
                android:onClick="onClick"
                />


</RelativeLayout>
